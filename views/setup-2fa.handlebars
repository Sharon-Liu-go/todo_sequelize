<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
      <div class="bs-callout bs-callout-primary">
        <h4>Connect Google Authenticator to your Account</h4>
        <p>Scan QR code and press <strong>Save</strong> button.</p>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
      {{{qr}}}
      <form method="post" action="/otp/setup-2fa">
        <div class="form-group">
          <label for="otp">otp</label>
          <input type="text" class="form-control" id="otp" name="otp" placeholder="otp" required>
        </div>
        <button type="submit" class="btn btn-primary">Continue</button>
      </form>
    </div>
  </div>
</div>