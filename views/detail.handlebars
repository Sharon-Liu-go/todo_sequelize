<a href="/todos/new" class="btn btn-primary mb-3">Create</a>
<ul class="list-group">
  <li class="list-group-item">
    <div class="row">
      <div class="col-auto mr-auto">
        <input style="vertical-align: middle;" type="checkbox" name="isDone" {{#if todo.done }} checked {{/if}}
          disabled>
        <h4 style="display: inline; vertical-align: middle;">
          {{ todo.name }}
        </h4>
      </div>
      <div class="col-auto">
        <a class="btn btn-success" href="/todos/{{ todo.id }}/edit">edit</a>
        <form action="/todos/{{ todo.id }}?_method=DELETE" method="POST" style="display: inline;">
          <button class="btn btn-danger" type="submit">delete</button>
        </form>
      </div>
    </div>
  </li>
</ul>